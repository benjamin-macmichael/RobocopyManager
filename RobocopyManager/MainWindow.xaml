<Window x:Class="RobocopyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-threaded Robocopy Manager" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#f8f9fa">
            <Button x:Name="btnSettings" Content="Settings" Width="100" Height="35" Margin="5" Click="BtnSettings_Click"/>
            <Button x:Name="btnRunAll" Content="Run All Jobs" Width="120" Height="35" Margin="5" Background="#28a745" Foreground="White" FontWeight="Bold" Click="BtnRunAll_Click"/>
            <Button x:Name="btnStopAll" Content="Stop All" Width="100" Height="35" Margin="5" Background="#dc3545" Foreground="White" Click="BtnStopAll_Click" IsEnabled="False"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel x:Name="jobsPanel">
                <Button Content="Add New Job" Height="40" Margin="5" Background="#007bff" Foreground="White" FontWeight="Bold" Click="BtnAddJob_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>