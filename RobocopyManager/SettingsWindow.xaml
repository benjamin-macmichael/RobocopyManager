<Window x:Class="RobocopyManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Global Settings" Height="600" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Global Robocopy Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Retries on failure:" FontWeight="Bold"/>
            <TextBox x:Name="txtRetries" Margin="0,5,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Wait time between retries (seconds):" FontWeight="Bold"/>
            <TextBox x:Name="txtWaitTime" Margin="0,5,0,0"/>
        </StackPanel>
        <CheckBox x:Name="chkMirrorMode" Grid.Row="3" Content="Mirror mode (/MIR) - Mirrors source to destination, deletes files not in source" Margin="0,15,0,5"/>
        <CheckBox x:Name="chkCopySubdirs" Grid.Row="4" Content="Copy subdirectories (/S)" Margin="0,5"/>
        <CheckBox x:Name="chkCopyEmptyDirs" Grid.Row="5" Content="Include empty directories (/E)" Margin="0,5"/>
        <CheckBox x:Name="chkPurge" Grid.Row="6" Content="Purge deleted files (/PURGE) - Not used with Mirror mode" Margin="0,5"/>
        <Separator Grid.Row="7" Margin="0,15,0,15"/>
        <CheckBox x:Name="chkEnableVersioning" Grid.Row="8" Content="Enable file versioning (archive old versions to 'OldVersions' folder)" Margin="0,5" FontWeight="Bold"/>
        <StackPanel Grid.Row="9" Margin="20,10,0,0">
            <StackPanel Margin="0,10">
                <TextBlock Text="Days to keep old versions (0 = keep forever):" FontWeight="Bold"/>
                <TextBox x:Name="txtDaysToKeep" Margin="0,5,0,0"/>
                <TextBlock Text="(Versions older than this will be auto-deleted)" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock Text="Maximum versions per file (0 = unlimited):" FontWeight="Bold"/>
                <TextBox x:Name="txtMaxVersionsPerFile" Margin="0,5,0,0"/>
                <TextBlock Text="(Keeps only the most recent X versions of each file)" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="5" Click="BtnOK_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30" Margin="5" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>